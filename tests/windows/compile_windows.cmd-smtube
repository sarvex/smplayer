@echo off

set DEFS=

if "%~1" == "" (

	set DEFS=
	goto compileSMTube

) else if "%~1" == "pe" (

	set DEFS="DEFINES+=PORTABLE_APP"
	goto compileSMTube

) else (

	echo How to use:
	echo.
	echo compile_windows.cmd [buildtype]
	echo.
	echo Compile SMTube Non-portable, enter no arguments.
	echo.
	echo pe:	SMTube ^(Portable^)
	echo.
	goto end

)

:compileSMTube

call getrev.cmd

if "%~1" == "pe" (
	echo Compiling SMTube Portable Edition
	echo.

)
cd src
lrelease smtube.pro
qmake %DEFS%
mingw32-make

:end