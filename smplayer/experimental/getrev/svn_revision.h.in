/*  Do not edit src/svn_revision.h, this file will be overwritten when starting
    the build process. Instead edit getrev/svn_revision.h.in.
*/

#ifndef _SVN_REVISION_H_
#define _SVN_REVISION_H_

#define STR1(x) #x
#define STR(x) STR1(x)

#define USE_SVN_VERSION 1
#define SVN_REVISION $WCREV$

#define VERSION_MAJOR 0
#define VERSION_MINOR 7
#define VERSION_BUILD 1

// SMPlayer
#if USE_SVN_VERSION && SVN_REVISION != 0
#define SMPLAYER_VERSION            STR(VERSION_MAJOR) "." STR(VERSION_MINOR) "." STR(VERSION_BUILD) "+SVN-r" STR(SVN_REVISION)
#elif USE_SVN_VERSION && SVN_REVISION == 0
#define SMPLAYER_VERSION            STR(VERSION_MAJOR) "." STR(VERSION_MINOR) "." STR(VERSION_BUILD) "+SVN-rUNKNOWN"
#elif !USE_SVN_VERSION
#define SMPLAYER_VERSION            STR(VERSION_MAJOR) "." STR(VERSION_MINOR) "." STR(VERSION_BUILD)
#endif

// Windows Resource File
#if USE_SVN_VERSION
#define SMPLAYER_FILEVERSION        VERSION_MAJOR, VERSION_MINOR, VERSION_BUILD, SVN_REVISION
#define SMPLAYER_PRODVERSION        STR(VERSION_MAJOR) "." STR(VERSION_MINOR) "." STR(VERSION_BUILD) "." STR(SVN_REVISION) "\0"
#elif !USE_SVN_VERSION
#define SMPLAYER_FILEVERSION        VERSION_MAJOR, VERSION_MINOR, VERSION_BUILD, 0
#define SMPLAYER_PRODVERSION        STR(VERSION_MAJOR) "." STR(VERSION_MINOR) "." STR(VERSION_BUILD) ".0\0"
#endif

#endif
